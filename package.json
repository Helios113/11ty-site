{
  "name": "webpage",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:sass": "sass sass/main.scss:dist/styles.css",
    "build:cv": "node scripts/build-cv.js",
    "watch:sass": "onchange 'sass/**/*' -- npm run build:sass",
    "watch:cv": "onchange 'src/assets/cv.tex' -- npm run build:cv",
    "clean:css": "rm -f dist/*.css dist/*.css.map dist/*.scss",
    "build:eleventy": "eleventy",
    "build": "npm run update-venues && npm run build:cv && npm run build:sass && npm run build:eleventy && npm run clean:css",
    "serve": "eleventy --serve --port=8081",
    "watch": "onchange 'src/**/*' 'sass/**/*' -- npm run build",
    "dev": "npm-run-all update-venues clean:css build:cv build:sass --parallel watch:sass watch:cv serve",
    "update-venues": "node scripts/update-venues-from-dblp.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@11ty/eleventy": "^3.1.0",
    "bibtex-parse": "^2.1.0",
    "eleventy": "^1.0.7",
    "juice": "^11.0.1",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "sass": "^1.86.3",
    "sharp": "^0.34.4"
  }
}
