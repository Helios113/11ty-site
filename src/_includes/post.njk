---
layout: base.njk
---

<main>
  <article class="post">
    <header class="post-header">
      {% if date %}
      <div class="post-date">{{ date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) }}</div>
      {% endif %}
      <h1>{{ title }}</h1>
      {% if description %}
      <p class="post-description">{{ description }}</p>
      {% endif %}
    </header>
    
    <div class="post-content">
      {{ content | safe }}
    </div>
  </article>
</main>
