---
layout: base.njk
---
<header>
  <h1>{{ title }}</h1>
</header>
<main>
  <article>
    {{ content | safe }}
  </article>

  {% if collections.papers.length > 0 %}
  <section>
    <h2>Papers & Articles</h2>
    <ul>
      {% for entry in collections.papers %}
      <li>
        {% if entry.year %}({{ entry.year }}) {% endif %}<strong>{{ entry.title }}</strong>{% if entry.author %} — {{ entry.author | abbreviateAuthors }}{% endif %}
        {% if entry.booktitle %}<br><em>{{ entry.booktitle | abbreviateVenue }}</em>{% endif %}
        {% if entry.journal and not entry.booktitle %}<br><em>{{ entry.journal | abbreviateVenue }}</em>{% endif %}
        {% if entry.url %}<br><a href="{{ entry.url }}" target="_blank">View paper</a>{% endif %}
      </li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}

  {% if collections.books.length > 0 %}
  <section>
    <h2>Books</h2>
    <ul>
      {% for entry in collections.books %}
      <li>
        {% if entry.year %}({{ entry.year }}) {% endif %}<strong>{{ entry.title }}</strong>{% if entry.author %} — {{ entry.author | abbreviateAuthors }}{% endif %}
        {% if entry.url %}<br><a href="{{ entry.url }}" target="_blank">View book</a>{% endif %}
      </li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}

  {% if collections.articles.length > 0 %}
  <section>
    <h2>Other Resources</h2>
    <ul>
      {% for entry in collections.articles %}
      <li>
        {% if entry.year %}({{ entry.year }}) {% endif %}<strong>{{ entry.title }}</strong>{% if entry.author %} — {{ entry.author | abbreviateAuthors }}{% endif %}
        {% if entry.note %}<br>{{ entry.note }}{% endif %}
        {% if entry.url %}<br><a href="{{ entry.url }}" target="_blank">View resource</a>{% endif %}
      </li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}
</main>
