<!DOCTYPE html>
<html lang="en" prefix="og: https://ogp.me/ns#">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- SEO Meta Tags -->
  <title>{{ title }}{% if page.url != '/' %} | {{ meta.siteName }}{% endif %}</title>
  <meta name="description" content="{% if description %}{{ description }}{% else %}{{ meta.siteDescription }}{% endif %}">
  <meta name="author" content="{{ meta.authorName }}">
  <meta name="keywords" content="{% if keywords %}{{ keywords }}{% else %}PhD Computer Science, Machine Learning, Cambridge University, Preslav Aleksandrov, Deep Learning, Natural Language Processing, Computer Vision, AI Research, Foundational Models, Transformer Architecture{% endif %}">
  <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
  <meta name="googlebot" content="index, follow">
  
  <!-- Canonical URL -->
  <link rel="canonical" href="{{ meta.siteUrl }}{{ page.url }}">
  
  <!-- Language and Geo -->
  <meta name="language" content="English">
  <meta name="geo.region" content="GB-CAM">
  <meta name="geo.placename" content="Cambridge, UK">
  
  <!-- Academic/Research Specific -->
  <meta name="citation_author" content="{{ meta.authorName }}">
  <meta name="citation_title" content="{{ title }}">
  <meta name="DC.creator" content="{{ meta.authorName }}">
  <meta name="DC.subject" content="Computer Science, Machine Learning, AI Research">
  
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  
  <!-- Favicon and Icons -->
  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg">
  <link rel="manifest" href="/site.webmanifest">
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:type" content="{% if page.url == '/' %}website{% else %}article{% endif %}">
  <meta property="og:title" content="{{ title }}{% if page.url != '/' %} | {{ meta.siteName }}{% endif %}">
  <meta property="og:description" content="{% if description %}{{ description }}{% else %}{{ meta.siteDescription }}{% endif %}">
  <meta property="og:url" content="{{ meta.siteUrl }}{{ page.url }}">
  <meta property="og:site_name" content="{{ meta.siteName }}">
  <meta property="og:locale" content="en_GB">
  <meta property="og:image" content="{{ meta.siteUrl }}/og-image.jpg">
  <meta property="og:image:alt" content="{{ meta.authorName }} - PhD Computer Science Student at Cambridge University">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }}{% if page.url != '/' %} | {{ meta.siteName }}{% endif %}">
  <meta name="twitter:description" content="{% if description %}{{ description }}{% else %}{{ meta.siteDescription }}{% endif %}">
  <meta name="twitter:image" content="{{ meta.siteUrl }}/og-image.jpg">
  <meta name="twitter:image:alt" content="{{ meta.authorName }} - PhD Computer Science Student at Cambridge University">
  <meta name="twitter:creator" content="@your_twitter_handle">
  <meta name="twitter:site" content="@your_twitter_handle">
  
  <!-- LinkedIn and Professional Networks -->
  <meta property="profile:first_name" content="Preslav">
  <meta property="profile:last_name" content="Aleksandrov">
  <meta property="profile:username" content="preslav-aleksandrov">
  
  <!-- Academic Schema.org JSON-LD -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "{{ meta.authorName }}",
    "url": "{{ meta.siteUrl }}",
    "jobTitle": "PhD Student in Computer Science",
    "worksFor": {
      "@type": "Organization",
      "name": "University of Cambridge",
      "url": "https://www.cam.ac.uk"
    },
    "alumniOf": [
      {
        "@type": "Organization",
        "name": "University of Cambridge",
        "url": "https://www.cam.ac.uk"
      },
      {
        "@type": "Organization", 
        "name": "University of Glasgow",
        "url": "https://www.gla.ac.uk"
      }
    ],
    "knowsAbout": ["Machine Learning", "Deep Learning", "Natural Language Processing", "Computer Vision", "Artificial Intelligence", "Transformer Architecture", "Foundational Models"],
    "sameAs": [
      "{{ meta.github }}",
      "https://linkedin.com/in/preslav-aleksandrov",
      "https://scholar.google.com/citations?user=d3mnwTkAAAAJ"
    ],
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Cambridge",
      "addressCountry": "GB"
    }
  }
  </script>
  
  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-92JTV1EQK3"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-92JTV1EQK3', {
      page_title: '{{ title }}',
      page_location: '{{ meta.siteUrl }}{{ page.url }}'
    });
  </script>

</head>
<body>
  <div id="contents">
    <!-- Main navigation -->
    <header>
      <nav aria-labelledby="main-navigation">
        <h2 id="main-navigation" class="sr-only">Main Navigation</h2> <!-- Screen reader-only heading for navigation -->
        {% include "nav.njk" %}
      </nav>
    </header>

    <main id="main">
      {{ content | safe }}
    </main>
  </div>
</body>
</html>
