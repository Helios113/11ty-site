{% set currentUrl = page.url %}

  <ul role="list">
    <!-- Check if "Home" link is missing -->
    {% set hasHome = false %}
    {% for p in collections.pages %}
      {% if p.url == '/' %}
        {% set hasHome = true %}
      {% endif %}
    {% endfor %}

    {% if not hasHome %}
      <li>
        <a
          href="/"
          {% if currentUrl == '/' %}aria-current="page"{% endif %}>
          Home
        </a>
      </li>
    {% endif %}

    {# Create ordered navigation manually #}
    {% set navPages = [] %}
    
    {# Order 1: Blog #}
    {% for p in collections.pages %}
      {% if p.data.eleventyNavigation and p.data.eleventyNavigation.order == 1 %}
        {% set navPages = (navPages.push(p), navPages) %}
      {% endif %}
    {% endfor %}
    
    {# Order 2: CV #}
    {% for p in collections.pages %}
      {% if p.data.eleventyNavigation and p.data.eleventyNavigation.order == 2 %}
        {% set navPages = (navPages.push(p), navPages) %}
      {% endif %}
    {% endfor %}
    
    {# Order 3: Projects #}
    {% for p in collections.pages %}
      {% if p.data.eleventyNavigation and p.data.eleventyNavigation.order == 3 %}
        {% set navPages = (navPages.push(p), navPages) %}
      {% endif %}
    {% endfor %}
    
    {# Order 4: Reading #}
    {% for p in collections.pages %}
      {% if p.data.eleventyNavigation and p.data.eleventyNavigation.order == 4 %}
        {% set navPages = (navPages.push(p), navPages) %}
      {% endif %}
    {% endfor %}
    
    {# Pages without order #}
    {% for p in collections.pages %}
      {% if not p.data.eleventyNavigation or not p.data.eleventyNavigation.order %}
        {% set navPages = (navPages.push(p), navPages) %}
      {% endif %}
    {% endfor %}
    
    {% for p in navPages %}
      <li>
        <a
          href="{{ p.url }}"
          {% if currentUrl == p.url %}aria-current="page"{% endif %}
          title="{{ p.data.title }}">
          {{ p.data.title }}
        </a>
      </li>
    {% endfor %}

    <li>
      <a href="https://github.com/Helios113" target="_blank" rel="noopener noreferrer">
        GitHub
      </a>
    </li>
  </ul>
